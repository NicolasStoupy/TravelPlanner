<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Presentation.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Presentation.MAUI"
    Shell.FlyoutBehavior="Flyout"
    Title="Presentation.MAUI">
    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Route="About" />
        <ShellContent
            Title="Trips"
            ContentTemplate="{DataTemplate local:TripPage}"
            Route="About" />
        <ShellContent
       Title="ImputFile"
       ContentTemplate="{DataTemplate local:LoadFilePage}"
       Route="Trip.l" />
        <ShellContent
    Title="NewTrips"
    ContentTemplate="{DataTemplate local:NewTripPage}"
    Route="Trip/new" />
    </TabBar>
</Shell>
