<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Couleurs Globales -->
    <Color x:Key="HeaderBackgroundColor">#2C3E50</Color>
    <Color x:Key="RowBackgroundColorEven">#ECF0F1</Color>
    <Color x:Key="RowBackgroundColorOdd">White</Color>
    <Color x:Key="BorderColor">#BDC3C7</Color>

    <!-- Style du Header -->
    <Style x:Key="TableHeaderStyle" TargetType="Grid">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="BackgroundColor" Value="{StaticResource HeaderBackgroundColor}"/>     
    </Style>

    <Style x:Key="TableHeaderLabelStyle" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
    </Style>

    <!-- Style des lignes -->
    <Style x:Key="TableRowStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource BorderColor}"/>
        <Setter Property="StrokeThickness" Value="0.8"/>
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
     
    </Style>


    <Style x:Key="TableRowLabelStyle" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>